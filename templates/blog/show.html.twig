{% extends 'base.html.twig' %}

{% block title %}
	Hello Blog
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{blog.title}}
			<a href={{ path('homepage') }} class="btn btn-success float-end">Back</a>
			<a href={{ path('editBlog', {id: blog.id} ) }} class="btn btn-info float-end me-1">Edit</a>
			<a href={{ path('deleteBlog', {id: blog.id} ) }} onclick="return confirm('Confirm deletion')" class="btn btn-danger float-end me-1">Delete</a>
		</h1>
		<img src='../uploads/mainImage/{{blog.mainImage}}' class="img-fluid" width="100%">
		<h2>{{blog.subtitle}}</h2>
		<div class="row">
			{% for subImage in blog.subImages %}
				<div class="col-md">
					<img src='../uploads/subImage/{{subImage}}' width='100%' class='img-fluids'/>
				</div>
			{% endfor %}
			<p>{{ blog.text }}</p>
		</div>
	</div>
{% endblock %}
