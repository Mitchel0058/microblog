{% extends 'base.html.twig' %}

{% block title %}Hello Blog
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Welcome to my blogs</h1>
		{% for blog in blogs %}
			<div class="card">
				<div class="card-body">
					<a
						href={{ path('showBlog', {id:blog.id} ) }} class="text-decoration-none text-reset">
						{# <a href={{ path('showBlog', {id:blog.id} ) }}> #}
						<h2>{{ blog.title }}</h2>
						<h3>{{ blog.subtitle }}</h3>
						<h6 class="text-muted">{{ blog.publicationDate|date("d/m/Y") }}</h6>
						<img src={{blog.mainImage}}/>
						<p>{{ blog.text|length > 50 ? blog.text|slice(0, 50) ~ '...' : blog.text }}</p>
						{# </a> #}
						<a href={{ path('deleteBlog', {id: blog.id} ) }} class="btn btn-danger float-end m-1">Delete</a>
						<a href={{ path('editBlog', {id: blog.id} ) }} class="btn btn-info float-end m-1">Edit</a>
					</a>
				</div>
			</div>
			<br/>
		{% endfor %}
	</div>
{% endblock %}
